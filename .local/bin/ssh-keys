declare -A KEYS
KEYS[id_rsa]="ssh/id_rsa"
KEYS[tuclausthal]="tu-clausthal/ssh/tu-clausthal"

for i in "${!KEYS[@]}"; do
	SSH_ASKPASS="$HOME/.local/share/scripts/ssh_give_pass.sh" ssh-add \
		"$HOME/.ssh/${i}" <<<$(gopass "${KEYS[$i]}")
done
